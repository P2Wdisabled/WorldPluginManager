<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.P2W</groupId>
    <artifactId>wplmanager</artifactId>
    <version>2.0</version>
    <name>WorldPluginManager</name>
    <description>WorldPluginManager plugin for Minecraft</description>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <spigot.version>1.16.5-R0.1-SNAPSHOT</spigot.version>
    </properties>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>true</minimizeJar>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>spigot-1.16.5</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <spigot.version>1.16.5-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
        <profile>
            <id>spigot-1.17</id>
            <properties>
                <spigot.version>1.17-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
        <profile>
            <id>spigot-1.18</id>
            <properties>
                <spigot.version>1.18-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
        <profile>
            <id>spigot-1.19</id>
            <properties>
                <spigot.version>1.19-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
        <profile>
            <id>spigot-1.20</id>
            <properties>
                <spigot.version>1.20-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
        <profile>
            <id>spigot-1.21</id>
            <properties>
                <spigot.version>1.21-R0.1-SNAPSHOT</spigot.version>
            </properties>
        </profile>
    </profiles>
</project>
